    "@actions/tool-cache": "^3.0.0",
    "js-yaml": "4.1.1",
    "node-fetch": "^3.1.1",
    "semver": "^7.7.2",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.9",
    "@types/node": "^24.x",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
